---
// signup.astro
import Layout from "../layouts/Layout.astro";
import AuthForm from "../components/AuthForm.jsx";
---

<Layout>
  <div class="min-h-screen flex items-center justify-center px-6 py-4" role="main" aria-label="Sign up page">
    <div class="p-8 max-w-6xl w-full grid grid-cols-1 md:grid-cols-2 gap-8 bg-blue-800 rounded-2xl">
      <!-- left: illustration / marketing -->
      <div class="hidden md:flex items-center justify-center">
        <div class="w-full h-96 rounded-2xl bg-gradient-to-br from-[rgba(124,92,255,0.18)] to-[rgba(0,0,0,0.1)] p-6">
          <img
            src="/login.jpg"
            alt="Illustration showing login flow"
            class="w-full h-full object-cover rounded-lg"
            loading="lazy"
            decoding="async"
          />
        </div>
      </div>

      <!-- right: mount React island (client:load/idle) -->
      <AuthForm client:load />
    </div>
  </div>
</Layout>
