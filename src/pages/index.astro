---
import Paper from '@mui/material/Paper';
import Layout from '../layouts/Layout.astro';
import Container from '@mui/material/Container';
import TextField from '@mui/material/TextField';
import Button from '@mui/material/Button';
import Box from '@mui/material/Box';
import SearchCard from '../components/SearchCard.jsx';
import MediaCard from '../components/cards.tsx';
---

<Layout>
		<header class="bg-blue-800 text-white p-4">
			<div class="mx-auto flex flex-col items-center text-center py-12 px-4 sm:px-6 lg:px-8">
				<h1 class="text-3xl font-bold text-white leading-tight">
					CT REALTOR â€” Your Trusted Realtor in Kolkata
				</h1>
				<hr class="mx-auto my-6 w-24 border-t-2 border-white/70" />
				<p class="max-w-3xl mx-auto text-white/90 text-base sm:text-lg">
					Based in Salt Lake City, Bidhannagar, Kolkata, CT Realtor specializes in
					comprehensive real-estate marketing for commercial and residential
					properties across Kolkata.
				</p>
			</div>
		</header>

		<!-- Section with overlapping search card -->
		<section class="mb-4">
			<SearchCard client:load />
		</section>

		<section class="py-12 bg-white">
			<div class="container mx-auto px-4">
			<!-- Heading full width -->
			<div class="mb-8 text-center">
			<h2 class="text-2xl sm:text-3xl font-semibold">Featured Properties</h2>
			<p class="text-gray-600 mt-2 max-w-2xl mx-auto">Handpicked listings from Salt Lake, New Town and Park Street.</p>
			</div>

			<!-- Responsive grid for cards -->
			<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
				<MediaCard 
					image="/property-1.jpg" 
					title="Modern Apartment in Salt Lake" 
					description="A beautiful 2BHK apartment located in the heart of Salt Lake City with all modern amenities." 
				/>
				<MediaCard 
					image="/property-2.jpg" 
					title="Spacious Villa in New Town" 
					description="A luxurious villa with a garden and swimming pool, perfect for families." 
				/>
				<MediaCard 
					image="/property-3.jpg" 
					title="Cozy Studio near Park Street" 
					description="A compact and affordable studio apartment ideal for singles or couples." 
				/>
			</div>
		</div>
	</section>

</Layout>
